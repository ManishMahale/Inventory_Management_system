@model Inventory_Management_system.Models.tblRole

@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Registration</h2>


@using (Html.BeginForm())
{
    <div class="form-horizontal">

        <div class="form-group">
            @Html.Label("Role", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(x=>x.RoleId, ViewBag.Role as SelectList, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                @Html.ValidationMessageFor(x => x.RoleName, "", new { @class = "text-danger" })
            </div>
        </div>
       

        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Next" class="btn btn-success" /> &nbsp;
                @Html.ActionLink("Back to Login", "Login", new { }, new { @class = "btn btn-secondary" })

            </div>
        </div>
    </div>
}
